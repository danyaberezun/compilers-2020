-- Various utilities.
import List;

-- Flattens lists of lists of S-expressions of arbitrary depth.
public fun myDeepFlatten (l) {
  local res = [0, {}], curr = [res];

  fun append (x) {
    local new = x : {};
    
    curr [0][1] := new;
    curr [0] := new    
  }

  fun traverse (l) {
    case l of
      _ : _ -> iter (traverse, l)
    | {}    -> skip
    | _     -> append (l)
    esac
  }
  
  traverse (l);
  
  res [1]
}
